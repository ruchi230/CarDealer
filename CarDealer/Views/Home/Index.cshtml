                    <h2>Featured <em>Cars</em></h2>
                    <span>Aliquam id urna imperdiet libero mollis hendrerit</span>
                </div>
            </div>
            @foreach (CarDealer.EF.tblcar item in (ViewBag.info))
            {
                <div class="col-md-4">
                    <div class="service-item">
                        <img src="@item.Image" alt="" height="250" width="200">
                        <div class="down-content">
                            <h4>@item.Model</h4>
                            <div style="margin-bottom:10px;">
                                <span>
                                    <del>@item.CarPrice </del> &nbsp; @item.OfferPrice
                                </span>
                            </div>

                            <p>
                                <i class="fa fa-dashboard"></i> @item.Mileage &nbsp;&nbsp;&nbsp;
                                <i class="fa fa-cube"></i> @item.EngineSize &nbsp;&nbsp;&nbsp;
                                <i class="fa fa-cog"></i> @item.GearBox &nbsp;&nbsp;&nbsp;
                                <i class="fa fa-cog"></i> @item.City &nbsp;&nbsp;&nbsp;
                            </p>
                            <a href="CarsDetail/@item.Id" class="filled-button" onclick="@("window.location.href='" + Url.Action("CarsDetail","Home") +"'");">View More</a>
                        </div>
                    </div>

                    <br>
                </div>
            }

        </div>
    </div>
</div>

